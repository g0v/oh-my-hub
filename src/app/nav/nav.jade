nav#sidebar(ng-controller="NavCtrl")
  .ui.menu.no.margin
    .ui.dropdown.item  Project Hub
        i.icon.dropdown
        .menu
          a.item Resource Hub[TBD]
          a.item Project Hub[TBD]
          a.item Charts[TBD]
    .right.menu
      .ui.dropdown.icon.item
        i.icon.ellipsis.vertical
        .menu
          .item(ng-click="goto('/wiki')")
            i.icon.pencil
            | Edit pending data
            //-i.icon.forward.mail.right
          .item(ng-click="goto('/project')")
            i.icon.unhide
            | View projects
          .item(ng-click="goto('/about')")
            i.icon.help
            | About
  #search.field
    .ui.icon.input
      input(placeholder="search...", type="text" ng-model="filters.search_text")
      i.icon.search
  #index.ui.vertical.fluid.menu.no.margin
    div.ui.accordion(ng-repeat="(menu_name, menu_items) in menu")
      div.title.header.item(ng-click="toggle[menu_name] = !toggle[menu_name]" ng-class="{'active':toggle[menu_name]}") {{menu_name}} ({{counts[menu_name]}})
        i.icon.dropdown
      .content.ui.small.menu(ng-class="{'active':toggle[menu_name]}")
        .menu
          a.item(ng-repeat="(item_name, item_count) in menu_items")
            .ui.label {{item_count}}
            {{item_name}}

